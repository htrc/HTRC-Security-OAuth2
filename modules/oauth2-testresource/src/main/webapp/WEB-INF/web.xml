<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Sample Web Application for Testing OAuth2 Filter</display-name>

    <filter>
        <filter-name>OAuth2Filter</filter-name>
        <filter-class>edu.indiana.d2i.htrc.oauth2.filter.OAuth2Filter</filter-class>
        <init-param>
            <param-name>oauth2.provider.url</param-name>
            <param-value>https://localhost:9443/carbon</param-value>
        </init-param>
        <init-param>
            <param-name>oauth2.provider.user</param-name>
            <param-value>samitha</param-value>
        </init-param>
        <init-param>
            <param-name>oauth2.provider.password</param-name>
            <param-value>admin123</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>OAuth2Filter</filter-name>
        <url-pattern>/WebResource</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>WebResource</servlet-name>
        <servlet-class>edu.indiana.d2i.htrc.oauth2.sample.WebResource</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WebResource</servlet-name>
        <url-pattern>/WebResource</url-pattern>
    </servlet-mapping>
</web-app>
